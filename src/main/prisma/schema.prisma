// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "./generated/output"
  binaryTargets = ["darwin", "windows", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/clippy.db"
}

model Clipboard {
  id          Int      @id @default(autoincrement())
  type        String
  content     String?
  width       Int?
  height      Int?
  size        String?
  blob        Bytes?
  star        Boolean  @default(false)
  createdDate DateTime @default(now())
}

model Settings {
  id           Int     @id
  startup      Boolean // @default(false)
  notification Boolean // @default(false)
  synchronize  Boolean // @default(false)
  syncTime     Int
  darkmode     Boolean // @default(true)
}

model Hotkey {
  id     Int     @id
  event  String
  ctrl   Boolean // @default(false)
  alt    Boolean // @default(false)
  shift  Boolean // @default(false)
  key    String // @default("X")
  status Boolean // @default(true)
  name   String
  icon   String
}
